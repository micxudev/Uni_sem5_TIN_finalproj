{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@modules/*": [
        "apps/backend/src/modules/*"
      ],
      "@db": [
        "apps/backend/src/db"
      ],
      "@middlewares/*": [
        "apps/backend/src/middlewares/*"
      ],
      "@errors": [
        "apps/backend/src/errors"
      ],
      "@security/*": [
        "apps/backend/src/security/*"
      ],
      "@shared/*": [
        "packages/shared/src/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": [
    "apps/backend/src/**/*",
    "packages/shared/src"
  ],
  "exclude": [
    "node_modules"
  ]
}